
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Shop Thẻ Game - Mua Garena, Zing, Steam Wallet Giá Rẻ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="MobileOptimized" content="320">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/yae.gif" type="image/png" />

    <!-- SEO -->
    <meta name="description" content="Shop bán thẻ Garena, Zing, Vcoin, Steam Wallet... Mã thẻ uy tín - giao nhanh - chiết khấu tốt.">
    <meta name="keywords" content="mua thẻ game, thẻ garena, thẻ zing, steam wallet, shop uy tín, giá rẻ">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://yourshop.com" />

    <!-- Social Sharing -->
    <meta property="og:title" content="Shop Thẻ Game - Mua Steam Wallet, Garena, Zing giá tốt" />
    <meta property="og:description" content="Thẻ game và ví điện tử đa dạng. Mua online – nhận mã sau vài giây. Hỗ trợ 24/7." />
    <meta property="og:image" content="https://yourshop.com/img/banner-share.jpg" />
    <meta property="og:url" content="https://yourshop.com" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="vi_VN" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Raleway:300,400,500,700|Poppins:300,400,500,700" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Vendor CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Main CSS -->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />

    <!-- Fix menu mobile -->
    <style>
        .navbar ul {
            display: flex;
        }

        @@media (max-width: 991px) {
            .navbar ul {
                display: none;
            }

            .navbar.navbar-mobile ul {
                display: block;
                position: absolute;
                top: 60px;
                left: 0;
                right: 0;
                background: white;
                padding: 10px 20px;
                z-index: 999;
            }
        }
    </style>


    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center justify-content-between">

            <nav style="
    background-color: #E1F0FF; /* xanh nhạt nhẹ nhàng */
    padding: 12px 24px;
    border-radius: 12px; /* bo tròn 4 góc */
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    margin: 16px;">

                <div style="display: flex; align-items: center; justify-content: space-between;">
                    @Html.ActionLink("Mieow Shop", "Index", "Shop", null, new {
                    @class = "navbar-brand",
                                        style = "font-weight: 300; color: #1A73E8; text-decoration: none; font-size: 14px; font-family: 'Raleway', sans-serif;"})
                </div>

                <i class="bi bi-list mobile-nav-toggle" style="color: #1A73E8; font-size: 24px;"></i>
            </nav>


            

        </div>
    </header>
    <!-- End Header -->

    <main style="margin-top: 80px;">
        @RenderBody()
    </main>

    
    <!-- Vendor JS -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <!-- Main JS -->
    <script src="~/js/main.js"></script>

    <!-- View-specific Scripts -->
    @RenderSection("Scripts", required: false)

</body>
</html>
