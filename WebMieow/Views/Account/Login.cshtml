@{
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
    ViewData["Title"] = "Thông tin tài khoản";
}

<section id="profile" class="py-5" style="min-height: 80vh;">
    <div class="container">
        <div class="row gx-4">
            <!-- Thông tin cá nhân -->
            <div class="col-lg-5 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Thông tin cá nhân</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless mb-0">
                            <tr>
                                <th style="width: 40%;">Tên đăng nhập:</th>
                                <td>@Model.Username</td>
                            </tr>
                            @* <tr>
                                <th>Họ tên:</th>
                                <td>@Model.FullName</td>
                            </tr> *@
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Điện thoại:</th>
                                <td>@Model.Phone</td>
                            </tr>
                            @* <tr>
                                <th>Địa chỉ:</th>
                                <td>@Model.Address</td>
                            </tr> *@
                        </table>
                        @if (Context.Session.GetInt32("IsAdmin") == 1)
                        {
                            <div class="mt-3">
                                <a href="/Shop/Admin" class="btn btn-warning">Quản lý đơn</a>
                            </div>
                            <div class="mt-3">
                                <a href="/Home/Index" class="btn btn-warning">Về Home</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Lịch sử đơn hàng -->
            <div class="col-lg-7">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Lịch sử đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Orders != null && Model.Orders.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Mã đơn</th>
                                            <th>Loại hàng</th>
                                            <th>Thời gian</th>
                                            <th>Trạng thái</th>
                                            <th>Mã thẻ</th>
                                            <th>Gmail nhận</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td>@order.OrderCode</td>
                                                <td>@order.Plan</td>
                                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                                <td>@order.Status</td>
                                                <td>@order.Card</td>
                                                <td>@order.Contact</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
  // Chặn chuột phải
  document.addEventListener('contextmenu', e => e.preventDefault());

  // Chặn F12 và Ctrl+Shift+I với thông báo
  document.addEventListener('keydown', function (e) {
    if (e.key === "F12" || (e.ctrlKey && e.shiftKey && e.key === "I")) {
      e.preventDefault();
      alert("Bấm F12 làm gì, định copy à, có làm mới có ăn nha.");
    }
  });
</script>



